<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditModuleFragment"
    android:padding="@dimen/layout_padding">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCicloName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editCicloName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/module_ciclo"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCicloAbreviatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCicloName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editCicloAbreviatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/abreviatura"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSaveCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCicloAbreviatura" />

    <Button
        android:id="@+id/btnDeleteCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSaveCiclo"
        app:backgroundTint="?attr/colorSecondary"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/modulosCicloFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteCiclo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.mpd.pmdm.practicaroommodulos.ui.AllModulesListFragment"
        />


</androidx.constraintlayout.widget.ConstraintLayout>